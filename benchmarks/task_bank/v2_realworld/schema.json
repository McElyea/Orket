{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Orket Real-World Benchmark Task Bank",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "required": [
      "id",
      "tier",
      "description",
      "problem",
      "instruction",
      "acceptance_contract",
      "evaluation"
    ],
    "additionalProperties": false,
    "properties": {
      "id": { "type": "string", "pattern": "^[0-9]{3}$" },
      "tier": { "type": "integer", "minimum": 1, "maximum": 6 },
      "description": { "type": "string", "minLength": 8 },
      "problem": { "type": "string", "minLength": 8 },
      "function_signature": { "type": "string", "minLength": 5 },
      "instruction": { "type": "string", "minLength": 8 },
      "constraints": {
        "type": "array",
        "items": { "type": "string", "minLength": 1 }
      },
      "io_examples": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["input", "output"],
          "additionalProperties": false,
          "properties": {
            "input": {},
            "output": {}
          }
        }
      },
      "acceptance_contract": {
        "type": "object",
        "required": ["mode", "required_artifacts", "pass_conditions", "determinism_profile"],
        "additionalProperties": true,
        "properties": {
          "mode": { "type": "string", "enum": ["function", "module", "service", "system"] },
          "required_artifacts": { "type": "array", "items": { "type": "string" } },
          "pass_conditions": { "type": "array", "items": { "type": "string" } },
          "determinism_profile": { "type": "string", "enum": ["strict", "bounded", "convergence"] }
        }
      },
      "evaluation": {
        "type": "object",
        "required": ["type", "examples"],
        "additionalProperties": true,
        "properties": {
          "type": { "type": "string", "enum": ["function_examples", "cli_examples"] },
          "function_name": { "type": "string", "minLength": 1 },
          "entrypoint": { "type": "string", "minLength": 1 },
          "examples": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["args"],
              "additionalProperties": true,
              "properties": {
                "args": { "type": "array" },
                "kwargs": { "type": "object" },
                "expected": {},
                "expected_stdout": { "type": "string" },
                "expected_stderr": { "type": "string" },
                "expected_exit_code": { "type": "integer" }
              }
            }
          }
        }
      }
    },
    "allOf": [
      {
        "if": {
          "properties": {
            "acceptance_contract": {
              "properties": {
                "mode": { "const": "function" }
              }
            }
          }
        },
        "then": {
          "required": ["function_signature"],
          "properties": {
            "evaluation": {
              "properties": {
                "type": { "const": "function_examples" }
              },
              "required": ["type", "function_name", "examples"]
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "acceptance_contract": {
              "properties": {
                "mode": { "enum": ["module", "service", "system"] }
              }
            }
          }
        },
        "then": {
          "properties": {
            "evaluation": {
              "properties": {
                "type": { "const": "cli_examples" }
              },
              "required": ["type", "entrypoint", "examples"]
            }
          }
        }
      }
    ]
  }
}
