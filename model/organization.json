{
    "name": "Vibe Rail",
    "vision": "To deliver local-first, high-fidelity automation tools that empower users with autonomous market intelligence.",
    "ethos": "Excellence through iteration, transparency in process, and local-first sovereignty.",
    "branding": {
        "colorscheme": {
            "primary": "#1A202C",
            "secondary": "#2D3748",
            "accent": "#4A5568"
        },
        "fonts": ["Inter", "Roboto Mono"],
        "design_dos": [
            "Use clear, professional labels",
            "Prefer flat structures for simple tasks",
            "Maintain high contrast for accessibility"
        ],
        "design_donts": [
            "Do not use emojis or non-standard symbols in logs",
            "Avoid over-engineering for single-user tools"
        ]
    },
    "architecture": {
        "idesign_threshold": 7,
        "preferred_stack": {
            "frontend": "Vue",
            "backend": "FastAPI",
            "database": "SQLite/SQLAlchemy"
        },
        "cicd_rules": [
            "All functional logic must be verified by the integrity_guard",
            "No PR merge without a Quality Score > 7.0"
        ]
    },
    "contact": {
        "email": "contact@viberail.com",
        "socials": {
            "github": "VibeRail"
        }
    },
    "departments": ["core", "engineering", "marketing", "product", "quality", "training", "uiux"],
    "process_rules": {
        "frontend_framework_mode": "force_vue",
        "card_flow": ["Ready", "In Progress", "Blocked", "Cancelled", "Waiting_For_Developer", "Ready_For_Testing", "Code_Review", "Done"],
        "final_states": ["Done", "Canceled"]
    }
}
