# Orket Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git - it's in .gitignore

# ============================================================================
# Dashboard / UI Credentials
# ============================================================================
DASHBOARD_PASSWORD=your-secure-password-here
DASHBOARD_SECRET_KEY=your-secret-key-change-me

# ============================================================================
# Gitea (Git + CI/CD)
# ============================================================================
GITEA_ADMIN_USER=admin
GITEA_ADMIN_PASSWORD=change-me-gitea-admin
GITEA_ADMIN_EMAIL=admin@viberail.local

# For Gitea Actions (CI/CD) - if enabled
GITEA_RUNNER_TOKEN=your-runner-registration-token

# ============================================================================
# Sandbox Database Credentials (used in generated projects)
# ============================================================================
# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres-change-me
POSTGRES_DB=appdb

# MySQL (alternative)
MYSQL_ROOT_PASSWORD=mysql-change-me
MYSQL_USER=appuser
MYSQL_PASSWORD=mysql-user-change-me

# MongoDB (alternative)
MONGO_INITDB_ROOT_USERNAME=mongo
MONGO_INITDB_ROOT_PASSWORD=mongo-change-me

# SQL Server (alternative)
MSSQL_SA_PASSWORD=YourStrong!Passw0rd

# ============================================================================
# External APIs (if integrating)
# ============================================================================
# OpenAI (if using GPT models)
OPENAI_API_KEY=sk-your-key-here

# Anthropic (if using Claude API)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ============================================================================
# Orket Internal
# ============================================================================
# Database encryption key (for sensitive card data)
ORKET_ENCRYPTION_KEY=your-32-byte-hex-key-here

# Session secret (for web sessions)
SESSION_SECRET=your-session-secret-here

# ============================================================================
# Email (for notifications - optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=orket@viberail.com
