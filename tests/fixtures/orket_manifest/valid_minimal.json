{
  "apiVersion": "orket.io/v1",
  "kind": "Orket",
  "metadata": {
    "name": "orket-summarizer",
    "displayName": "Orket - Summarizer",
    "description": "Summarizes long documents locally.",
    "version": "0.1.0",
    "engineVersion": ">=0.3.0,<0.6.0"
  },
  "model": {
    "preferred": "qwen2.5-coder:7b",
    "minimum": "qwen2.5-coder:3b",
    "fallback": [
      "llama3.2:3b"
    ],
    "allowOverride": true
  },
  "agents": [
    {
      "name": "reader",
      "role": "Reads and chunks input documents."
    },
    {
      "name": "summarizer",
      "role": "Produces structured summaries."
    }
  ],
  "guards": [
    "hallucination",
    "structure",
    "safety"
  ],
  "stateMachine": {
    "file": "state_machine.json"
  },
  "persistence": {
    "enabled": true,
    "storageDir": ".orket/state",
    "retainHistory": true
  },
  "permissions": {
    "filesystem": {
      "read": [
        "./input"
      ],
      "write": [
        "./output"
      ]
    },
    "network": {
      "allowed": false
    },
    "tools": {
      "allowed": [
        "shell:read-only"
      ]
    }
  }
}
