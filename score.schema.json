{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Score",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique score name."
    },
    "description": {
      "type": "string"
    },
    "included_roles": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Optional subset of band roles that participate in this score. If omitted, all band roles are eligible."
    },
    "dependencies": {
      "type": "object",
      "description": "Role â†’ list of roles that must complete first.",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "completion": {
      "type": "object",
      "properties": {
        "require_all_roles_complete": {
          "type": "boolean",
          "default": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
