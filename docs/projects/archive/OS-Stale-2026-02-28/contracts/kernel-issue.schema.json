{
  "$id": "https://orket.dev/os/contracts/kernel-issue.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KernelIssue",
  "type": "object",
  "additionalProperties": false,
  "required": ["contract_version", "level", "stage", "code", "location", "message", "details"],
  "properties": {
    "contract_version": { "const": "kernel_api/v1" },
    "level": { "enum": ["FAIL", "INFO"] },
    "stage": {
      "enum": ["base_shape", "dto_links", "relationship_vocabulary", "policy", "determinism", "ci", "lsi", "promotion", "capability", "replay"]
    },
    "code": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[EI]_[A-Z0-9_]+$"
    },
    "location": {
      "type": "string",
      "minLength": 1,
      "description": "RFC6901 JSON Pointer",
      "pattern": "^/(?:[^~]|~0|~1)*$"
    },
    "message": { "type": "string", "minLength": 1 },
    "details": {
      "type": "object",
      "additionalProperties": true,
      "description": "Deterministic JSON object; keys MUST be sorted during canonicalization."
    }
  }
}
