{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://orket.dev/os/contracts/error-codes-v1.schema.json",
  "title": "ErrorCodesV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "codes"
  ],
  "properties": {
    "version": {
      "const": "v1"
    },
    "codes": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Z][A-Z0-9_]+$"
      },
      "uniqueItems": true
    }
  }
}
