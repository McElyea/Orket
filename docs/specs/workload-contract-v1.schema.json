{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://orket.dev/schemas/workload-contract-v1.schema.json",
  "title": "RefactorCardEngine Workload Contract v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "workload_contract_version",
    "workload_type",
    "units",
    "required_materials",
    "expected_artifacts",
    "validators",
    "summary_targets",
    "provenance_targets"
  ],
  "properties": {
    "workload_contract_version": {
      "type": "string",
      "const": "workload.contract.v1"
    },
    "workload_type": {
      "type": "string",
      "enum": ["odr", "cards"]
    },
    "units": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "required_materials": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "expected_artifacts": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "validators": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "summary_targets": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "provenance_targets": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
